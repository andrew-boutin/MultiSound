<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/activity_main">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Add Sound"
        android:id="@+id/addSoundButton"
        android:textStyle="bold"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_below="@+id/fileView"
        android:layout_alignRight="@+id/fileChooser"
        android:layout_alignEnd="@+id/fileChooser" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/soundListView"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/addSoundButton"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nameEdit"
        android:gravity="center_vertical"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/nameView"
        android:layout_alignRight="@+id/fileChooser"
        android:layout_alignEnd="@+id/fileChooser"
        android:layout_alignBottom="@+id/nameView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fileChooser"
        android:gravity="center_vertical"
        android:clickable="true"
        android:layout_alignEnd="@+id/soundListView"
        android:layout_toRightOf="@+id/fileView"
        android:layout_alignBottom="@+id/fileView"
        android:layout_alignTop="@+id/fileView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=" Name:"
        android:id="@+id/nameView"
        android:gravity="center_vertical"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=" File    :"
        android:id="@+id/fileView"
        android:gravity="center_vertical"
        android:textStyle="bold"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/nameView" />

</RelativeLayout>
