<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Sound"
        android:id="@+id/addSoundButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/soundListView"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/fileEdit"
        android:layout_marginTop="5dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nameEdit"
        android:layout_alignRight="@+id/soundListView"
        android:layout_alignEnd="@+id/soundListView"
        android:layout_toEndOf="@+id/nameView"
        android:layout_toRightOf="@+id/nameView"
        android:gravity="center_vertical"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@+id/nameView" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fileEdit"
        android:layout_below="@+id/addSoundButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/fileView"
        android:layout_toEndOf="@+id/fileView"
        android:gravity="center_vertical"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Name:"
        android:id="@+id/nameView"
        android:gravity="center_vertical"
        android:layout_toRightOf="@+id/addSoundButton"
        android:layout_toEndOf="@+id/addSoundButton"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@+id/addSoundButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="File:"
        android:id="@+id/fileView"
        android:layout_below="@+id/addSoundButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/fileEdit"
        android:gravity="center_vertical"
        android:layout_marginTop="5dp" />

</RelativeLayout>
